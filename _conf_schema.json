{
    "music_platform": {
        "description": "音乐平台",
        "hint": "选择音乐搜索的平台，支持网易、QQ、酷我",
        "type": "string",
        "options": ["网易", "QQ", "酷我"],
        "default": "网易"
    },
    "search_display_mode": {
        "description": "搜索结果展示模式",
        "hint": "选择搜索结果的展示方式，支持文字和图片",
        "type": "string",
        "options": ["文字", "图片"],
        "default": "文字"
    },
    "send_song_mode": {
        "description": "歌曲发送模式",
        "hint": "选择发送歌曲的方式，支持卡片、语音和文本",
        "type": "string",
        "options": ["卡片", "语音", "文本"],
        "default": "卡片"
    },
    "enable_lyrics": {
        "description": "是否启用歌词",
        "hint": "开启后在发送歌曲后附加歌词信息",
        "type": "bool",
        "default": false
    },
    "timeout": {
        "description": "点歌超时时长（秒）",
        "hint": "点歌时用户在此时间内没有进行操作则自动取消点歌",
        "type": "int",
        "default": 30
    },
    "show_song_count": {
        "description": "展示歌曲数量",
        "hint": "每次搜索展示的歌曲数量，默认为10首",
        "type": "int",
        "default": 10
    }
}